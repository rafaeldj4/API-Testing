/* API usuarios: https://jsonplaceholder.typicode.com/users */

// 1.Validar que la API devuelva un estado 200
pm.test("Validar que la API devuelva un estado 200", function() {
    pm.response.to.have.status(200);
})

//2.Validar que la API devuelva en la respuesta los campos username, address, city
pm.test("Validar que la API devuelva en la respuesta los campos username, address, city", function() {
    pm.expect(pm.response.text()).to.include("username")
    pm.expect(pm.response.text()).to.include("address")
    pm.expect(pm.response.text()).to.include("city")
})

//3.Validar que la API responsa en menos de 800 milisegundos
pm.test("Validar que la API responsa en menos de 800 milisegundos", function(){
    pm.expect(pm.response.responseTime).to.be.below(800)
})
